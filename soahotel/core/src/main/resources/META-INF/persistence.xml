<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
    <persistence-unit name="soahoteldb">   
    	<!-- <provider>org.hibernate.ejb.HibernatePersistence</provider>
    	<non-jta-data-source>java:jboss/datasources/soahoteldb</non-jta-data-source>  	 -->
		<jta-data-source>java:jboss/datasources/soahoteldb</jta-data-source> 
    	<class>pl.edu.agh.soa.core.bean.Account</class> 
		<class>pl.edu.agh.soa.core.bean.AdditionalServiceType</class> 
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
          	<property name="hibernate.hbm2ddl.auto" value="create-drop" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.default_schema" value="soahotel"/>
            <property name="hibernate.archive.autodetection" value="class"/>
        </properties>
    </persistence-unit>
</persistence>